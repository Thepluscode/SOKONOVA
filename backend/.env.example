# ==================================================
# SokoNova Backend - Environment Variables
# ==================================================

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/sokonova

# Server
PORT=4000

# Frontend URL (for email templates and CORS)
FRONTEND_BASE_URL=http://localhost:3000

# ==================================================
# NOTIFICATION SYSTEM
# ==================================================

# -------------------------
# SendGrid (Email)
# -------------------------
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=notifications@sokonova.com

# -------------------------
# Africa's Talking (SMS)
# -------------------------
# Get credentials from: https://account.africastalking.com/apps
# Recommended for: Kenya, Tanzania, Uganda, Nigeria, Rwanda, etc.
AFRICASTALKING_API_KEY=
AFRICASTALKING_USERNAME=
AFRICASTALKING_SHORT_CODE=SokoNova

# -------------------------
# Alternative: Twilio (SMS/WhatsApp)
# -------------------------
# Get credentials from: https://www.twilio.com/console
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=
# TWILIO_WHATSAPP_NUMBER=

# -------------------------
# Web Push Notifications (Optional)
# -------------------------
# Generate VAPID keys with: npx web-push generate-vapid-keys
# WEB_PUSH_PUBLIC_KEY=
# WEB_PUSH_PRIVATE_KEY=
# WEB_PUSH_CONTACT=mailto:support@sokonova.com

# ==================================================
# PAYMENT PROVIDERS
# ==================================================

# Paystack (Nigeria, Ghana, South Africa, etc.)
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=

# Flutterwave (Pan-African)
FLUTTERWAVE_SECRET_KEY=
FLUTTERWAVE_PUBLIC_KEY=

# Stripe (Global fallback)
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=

# ==================================================
# SECURITY & AUTH
# ==================================================

# NextAuth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# JWT
JWT_SECRET=your-jwt-secret-key

# ==================================================
# INFRASTRUCTURE & MONITORING
# ==================================================

# Redis (Session & Caching)
REDIS_URL=redis://localhost:6379

# Sentry (Error Tracking)
SENTRY_DSN=https://...@sentry.io/...

# Object Storage (S3/R2)
S3_ENDPOINT=https://xxx.r2.cloudflarestorage.com
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=sokonova-uploads
S3_REGION=auto

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# NODE_ENV
NODE_ENV=development
