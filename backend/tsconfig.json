{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "disableReferencedProjectLoad": true,
    "disableSourceOfProjectReferenceRedirect": true
  },
  "include": [
    "src/**/*",
    "../types/prisma-fix.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.e2e-spec.ts"
  ]
}